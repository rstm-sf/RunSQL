<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RunSQL.Views"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="RunSQL.Views.MainWindow"
        Width="400" Height="400"
        Title="RunSQL">
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Left" Margin="12 12 6 12">
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Path=.}" Margin="2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <DockPanel Margin="6 12 12 12">
            <TextBlock DockPanel.Dock="Top" Classes="h1" Margin="0 0 0 6">
                SELECT name FROM sqlite_master WHERE type='table'
            </TextBlock>
            <DataGrid Name="dataGrid" IsReadOnly="True" Items="{Binding Items}" Margin="0 6 0 0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Table Name" Binding="{Binding Path=.}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DockPanel>
</Window>
