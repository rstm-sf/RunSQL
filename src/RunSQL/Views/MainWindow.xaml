<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RunSQL.Views"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="RunSQL.Views.MainWindow"
        Width="600" Height="400"
        Title="RunSQL">
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Left" Margin="12 12 6 12">
            <ItemsControl Items="{Binding TableNames}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Path=.}" Margin="2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <DockPanel Margin="6 12 12 12">
            <TextBlock Text="{Binding CommandText}"
                       DockPanel.Dock="Top"
                       Classes="h1"
                       Margin="0 0 0 6" />
            <DataGrid Name="dataGrid"
                      Items="{Binding Table.Rows}"
                      IsReadOnly="True"
                      Margin="0 6 0 0" />
        </DockPanel>
    </DockPanel>
</Window>
